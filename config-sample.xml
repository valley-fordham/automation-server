<?xml version="1.0" encoding="UTF-8"?>

<config>
	<authentication_token>
		<token>yourAuthenticationToken</token>
		<behaviour>static</behaviour>
	</authentication_token>

	<broadlink>
		<cli_path>/path/to/python-broadlink/cli/broadlink_cli</cli_path>
		<device>
			<name>lounge</name>
			<device_code>0x27c2</device_code>
			<ip_address>10.1.1.1</ip_address>
			<mac_address>250f51770f78</mac_address>
		</device>
		<device>
			<name>computer_room</name>
			<device_code>0x27c2</device_code>
			<ip_address>10.1.1.2</ip_address>
			<mac_address>540d51770f78</mac_address>
		</device>

		<signal>
			<name>aircon_on</name>
			<code></code>
		</signal>
		<signal>
			<name>aircon_off</name>
			<code></code>
		</signal>

		<request>
			<name>lounge_air_con_on</name>
			<broadlink_device_name>lounge</broadlink_device_name>
			<signal_name>aircon_on</signal_name>
		</request>

		<request>
			<name>computer_room_air_con_on</name>
			<broadlink_device_name>computer_room</broadlink_device_name>
			<signal_name>aircon_on</signal_name>
		</request>

		<request>
			<name>lounge_air_con_off</name>
			<broadlink_device_name>lounge</broadlink_device_name>
			<signal_name>aircon_off</signal_name>
		</request>

		<request>
			<name>computer_room_air_con_off</name>
			<broadlink_device_name>computer_room</broadlink_device_name>
			<signal_name>aircon_off</signal_name>
		</request>
	</broadlink>

	<carport>
		<request>
			<name>close_door</name>
			<action>close</action>
			<gpio_request_name>trigger_door</gpio_request_name>
			<gpio_request_name>read_door_status</gpio_request_name>
			<wait_time>15</wait_time>
		</request>
		<request>
			<name>check_status</name>
			<action>status</action>
			<gpio_request_name>read_door_status</gpio_request_name>
		</request>
		<request>
			<name>open_door</name>
			<action>open</action>
			<gpio_request_name>trigger_door</gpio_request_name>
		</request>
		<request>
			<name>trigger_door</name>
			<action>trigger</action>
			<gpio_request_name>trigger_door</gpio_request_name>
		</request>
	</carport>

	<command_line>
		<request>
			<name>wake_pc</name>
			<command_line>wakeonlan 1C:87:2C:61:42:21</command_line>
		</request>

		<request>
			<name>run_python_script</name>
			<command_line>python main.py</command_line>
			<output_returned>true</output_returned>
		</request>
	</command_line>

	<email>
		<mailbox>
			<name>gmail</name>
			<host>smtp.gmail.com</host>
			<port>587</port>
			<authenticate>true</authenticate>
			<username>yourGmailLogin</username>
			<password>yourGmailPassword</password>
			<tls>true</tls>
		</mailbox>
		<request>
			<name>pointless_email</name>
			<mailbox_name>gmail</mailbox_name>
			<to>to@mail</to>
			<to>to2@mail</to>
			<from>from@mail</from>
			<subject>Read me!</subject>
			<message>Nothing to see here!</message>
			<html>false</html>
		</request>
	</email>

	<gpio>
		<request>
			<name>trigger_door</name>
			<carport_only>false</carport_only>
			<write>
				<pin>7</pin>
				<behaviour>write_then_reset</behaviour>
				<value>1</value>
				<wait_time_before_reset>1000</wait_time_before_reset>
			</write>
		</request>
		<request>
			<name>read_door_status</name>
			<carport_only>false</carport_only>
			<read>
				<pin>7</pin>
				<behaviour>read</behaviour>
			</read>
		</request>
	</gpio>

	<proxy>
		<host>
			<name>aHost</name>
			<fqdn>mydomain.com</fqdn>
			<scheme>http</scheme>
			<port>80</port>
			<connection_timeout>5000</connection_timeout>
			<read_timeout>5000</read_timeout>
		</host>
		<request>
			<name>a_proxy_request</name>
			<host>aHost</host>
			<for_automation_server>true</for_automation_server>
		</request>
		<request>
			<name>another_proxy_request</name>
			<host>aHost</host>
			<for_automation_server>false</for_automation_server>
			<forward_parameter>parameter_one</forward_parameter>
			<forward_parameter>parameter_two</forward_parameter>
		</request>
	</proxy>
</config>
